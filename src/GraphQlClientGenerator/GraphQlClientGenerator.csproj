<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyTitle>GraphQL C# Client Generator Library</AssemblyTitle>
    <Authors>Husqvik</Authors>
    <Company>Tibber</Company>
    <VersionPrefix>0.6</VersionPrefix>
    <TargetFrameworks>netstandard1.3;net452</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Copyright>Copyright 2017-2020</Copyright>
    <PackageId>GraphQlClientGenerator.Library</PackageId>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http" Version="4.*" />
    <PackageReference Include="Newtonsoft.Json" Version="12.*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="BaseClasses.cs" />
    <EmbeddedResource Include="BaseClasses.cs" />
  </ItemGroup>

</Project>
